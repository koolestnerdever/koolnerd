></script>
{% style %}
     {% if section.settings.background != blank %}
       #shopify-section-{{ section.id }} {
       background-size: cover;
       background-position: center;
        background-image:url({{ section.settings.background | img_url: '1024x1024' }});
       }
     {% endif %}



  {% if section.settings.css != nil %}
  {% assign css = section.settings.css | replace: '&gt;','>' %}
  {{ css }}
  {% endif %}
{% endstyle %}

{% if section.settings.divider %}<div class="section--divider">{% endif %}

<div class="page-width">
  <!-- Title -->

  {% if section.settings.title != blank %}
    <div class="section-header">
      <h2 class="h1 heading_font">{{ section.settings.title }}</h2>
    </div>
  {% endif %}

  <!-- END Title -->

  <div class=" {% if section.settings.video_url == blank and section.settings.mp4 == blank and section.settings.image == blank %} video-wrapper{% else %}  main{% endif %}">
    {% if section.settings.video_url == blank and section.settings.mp4 == blank %}
      <iframe
        src="//www.youtube.com/embed/_9VUPq3SxOc?rel=0&showinfo=0&vq=720"
        width="850"
        height="480"
        frameborder="0"
        allowfullscreen
      ></iframe>
    {% endif %}

    {% if section.settings.mp4 != blank and section.settings.video_url != blank %}
      <a data-fancybox href="{{ section.settings.video_url }}">
        <svg width="191pt" height="237pt" viewBox="0 0 191 237" version="1.1" xmlns="http://www.w3.org/2000/svg">
